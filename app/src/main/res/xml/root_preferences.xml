<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Tiempo de rotación">

        <cu.control.queue.utils.IntEditTextPreference
            android:inputType="number"
            app:key="QUEUE_TIME"
            app:title="Tiempo de rotación en horas."
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="">

        <SwitchPreferenceCompat
            app:key="alerts"
            app:title="Alertas de colas multiples" />

        <cu.control.queue.utils.IntEditTextPreference
            android:inputType="number"
            app:key="QUEUE_CANT"
            app:title="Cantidad de colas a alertar."
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:title="Fecha de inicio."
            app:key="QUERY_START_DATE"/>

        <Preference
            app:title="Fecha de fin."
            app:key="QUERY_END_DATE"/>

    </PreferenceCategory>

</PreferenceScreen>